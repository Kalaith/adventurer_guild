{
  "name": "frontend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite --config vite.config.mjs",
    "build": "vite build --config vite.config.mjs",
    "build:check": "tsc -b && vite build --config vite.config.mjs",
    "lint": "node ./scripts/run-eslint.mjs .",
    "lint:fix": "node ./scripts/run-eslint.mjs . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test": "vitest --config vitest.config.mjs --configLoader runner",
    "test:run": "vitest run --config vitest.config.mjs --configLoader runner",
    "test:run:ci": "vitest run --config vitest.config.mjs --configLoader runner src/test/data/ src/test/utils/formatters.test.ts src/test/utils/questGenerator.test.ts",
    "test:coverage": "vitest run --config vitest.config.mjs --configLoader runner --coverage",
    "test:ui": "vitest --config vitest.config.mjs --configLoader runner --ui",
    "ci": "npm run lint && npm run type-check && npm run format:check && npm run test:run && npm run build",
    "ci:quick": "npm run lint && npm run type-check && npm run format:check"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.10",
    "autoprefixer": "^10.4.21",
    "chart.js": "^4.4.9",
    "framer-motion": "^12.18.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "react-use": "^17.6.0",
    "tailwindcss": "^4.1.10",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
